<Window x:Class="SpaceMarines.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server"  Height="239" Width="397" Icon="orbz_water.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <TextBox x:Name="tbLog" Background="#5AFFFFFF" IsReadOnly="True" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" SelectionBrush="#8DFFFFFF" />
        <StackPanel Orientation="Horizontal"  Grid.Row="1" HorizontalAlignment="right">
            <Label Content="Clients:"  Height="28"  Name="label1" />
            <Label x:Name="tbClientCount" Content="0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>

</Window>
